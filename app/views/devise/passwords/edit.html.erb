<div class="row">
  <div class="card change-password-card">
    <div class="card-body">
      <div class="devise-main">
        <h3 class="devise-title"><%= I18n.t('devise.passwords.edit.change_your_password') %></h3>
        <div class="devise-div-hr">
          <hr class="devise-hr">
        </div>
        <%= form_for(resource,
                     as: resource_name,
                     url: password_path(resource_name),
                     html: { method: :put }) do |f| %>
          <%= render "shared/change_password_error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="change-password-inputs-container justify-content-center">
            <div class="form-group">
              <%= f.label :password, I18n.t('devise.passwords.edit.new_password') %>
              <div>
                <em>
                  (<%= "#{minimum_password_length} #{I18n.t('devise.passwords.edit.characters_minimum').downcase}" %>)
                </em>
              </div>
              <%= f.password_field :password,
                                    autofocus: true,
                                    autocomplete: 'new-password',
                                    class: 'form-control devise-input-field' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, I18n.t('devise.passwords.edit.confirm_new_password') %>
              <%= f.password_field :password_confirmation,
                                   autocomplete: "new-password",
                                   class: 'form-control devise-input-field' %>
            </div>
            <div class="pb-2">
              <%= f.submit I18n.t('devise.passwords.edit.change_my_password'), class: 'btn btn btn-primary pb-2' %>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>  
    </div>
  </div>
</div>


