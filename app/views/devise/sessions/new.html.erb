<div class="row">
  <div class="card login-card">
    <div class="card-body">
      <div class="devise-main">
        <h2 class="devise-title"><%= t('devise.sessions.login').titleize %></h2>
        <div class="devise-div-hr">
          <hr class="devise-hr">
        </div>
        <%= form_for(resource, as: resource_name,
                               url: session_path(resource_name),
                               html: { class: 'pb-2'}) do |f| %>
          <div class="form-group">
            <%= f.label t('devise.sessions.username_or_email') %><br/>
            <%= f.text_field :email, autofocus: true,
                                     autocomplete: 'email',
                                     class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label t('devise.sessions.password') %><br/>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
          <div class="row">
            <div class="col-8">
              <div class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
            <div class="col-4">
              <%= render 'devise/shared/locale_dropdown' %>
            </div>
          </div>
          <button type="submit" class="btn btn btn-primary">
            <%= t('devise.sessions.login') %>
          </button>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>  
    </div>
  </div>
</div>
